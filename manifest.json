{
  "manifest_version": 3,
  "name": "SuMail",
  "version": "0.1.0",
  "description": "메일을 요약하고 감정·회신 템플릿까지 한 번에 제공하는 도우미입니다.",
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": [
    "storage",
    "activeTab",
    "contextMenus",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "SuMail"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html"
}
